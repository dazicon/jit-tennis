/**index.wxss**/
.news {
  width: 100%;
}
.news-title {
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
}
.news-title .news-title-icon {
  float: left;
  margin-left: 10rpx;
  width: 64rpx;
  height: 64rpx;
}
.news-title image {
  display: inline-block;
  margin: 8rpx 0;
  width: 64rpx;
  height: 64rpx;
}
.news-title .news-title-name {
  float: left;
  margin-left: 16rpx;
  
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}
.swiper-news {
  width: 100%;
  height: 360rpx;
}
.slide-image {
  width: 100%;
}